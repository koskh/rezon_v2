.form-check {
  &-label {
    display: flex;
    align-items: center;
  }

  &-input {
    margin-right: 0.25em;
  }
}

.btn.disabled,
.btn:disabled {
  opacity: 0.45;
}

.hint-feedback {
  display: none;
  width: 100%;
  margin-top: 0.25rem;
  font-size: 80%;
  color:#6c757d;
}
.form-control.is-hint:focus ~ .hint-feedback,
.form-control.is-hint:focus ~ .hint-tooltip {
  display: block;
}
