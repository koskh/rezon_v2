.iconPassword {
  position: absolute;
  right: 0.75rem;
  top: 0.375rem;
  width: 1.5rem;
  height: 1.5rem;
  cursor: pointer;
  z-index: 2;
}

.iconPasswordClosed {
  background-image: svg-load('./media/icon-password.svg');

  &:hover {
    background-image: svg-load('./media/icon-password--hover.svg');
  }
}

.iconPasswordOpen {
  background-image: svg-load('./media/icon-password-open.svg');

  &:hover {
    background-image: svg-load('./media/icon-password-open--hover.svg');
  }
}
